<body>
  <!-- START NAV -->
  <nav class="navbar is-white">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item brand-text" href="../index.html"> MegaWeb </a>
        <div class="navbar-burger burger" data-target="navMenu">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
      <div id="navMenu" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" target="_blank" href="support">Discord Support</a>
        </div>
      </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="field is-grouped">
         
          <p class="control">
            <a class="button is-primary">
              <span class="icon">
                <img
                src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png"
              />
              </span>
              <span><%= user.username + '#' + user.discriminator %></span>
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
  </nav>
  <!-- END NAV -->
  <div class="container">
    <div class="columns">
      <div class="column is-3">
        <article class="panel is-info">
          <p class="panel-heading">
            <% if (guild) { %>
            <span class="icon">
              <img
              src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.webp?size=128"
            />
            </span>
            <%= guild.name %><% } else{ %>Vos serveur<% } %></p>
          <% guilds.forEach((guild) => { %>

          <a class="panel-block <% if(guild.id == currentid){ %>has-text-weight-bold<% } %>" <% if(guild.botin == true) { %>href="/dashboard/<% } else { %>target="_blank" href="/invite?id=<% } %><%= guild.id %> ">
            <span class="panel-icon is-rounded mr-2">
              <img
              src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.webp?size=128"
              onerror="this.onerror=null;this.src='https:\/\/cdn.discordapp.com/embed/avatars/0.png';"
            /></span> <%= guild.name %>
          </a>
          <%})%>
        </article>
      </div>
      <div class="column is-9">
      
        <section class="hero is-info welcome is-small">
          <div class="hero-body">
            <div class="container">
              <h1 class="title">Hello, <%= user.username %></h1>
              <h2 class="subtitle">Bienvenue !</h2>
            </div>
          </div>
        </section>
        
        <div class="columns mt-1">
          <% if(guild){ %>
          <div class="column is-6">
            <div class="card events-card">
              <header class="card-header">
                <p class="card-header-title">Mes moniteurs</p>
                <a href="#" class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
              </header>
              <div class="card-table">
                <div class="content">
                  <div class="card">

                  </div>
                </div>
              </div>
             
            </div>
          </div>
          <div class="column is-6">
            <div class="card">
              <header class="card-header">
                <p class="card-header-title">Ajouter un moniteur</p>
                <a href="#" class="card-header-icon" aria-label="more options">
                  <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                  </span>
                </a>
              </header>
              <div class="card-content">
                <div class="content">
                  <form method="post" action="/addmonit" method="POST">
                  <div class="select is-medium is-fullwidth">
                    <select name="channelid">
                      <option>
                        Selectionner un salon
                      </option>
                      <% guild.channels.forEach((channel) => { %>
                        <option value="<%= channel.id %>">
                          <%= channel.name  %>
                        </option>
                      <%})%>
                    </select>
                  </div>
               
                <hr>
                <input required name="name" class="input" type="text" placeholder="Nom">
                <input required name="url" class="input" type="url" placeholder="URL du site Ã  surveiller">
                <input required name="interval" class="input" type="number" placeholder="Interval de mise a jour (en minutes)" min="5">
                <button type="submit" class="button is-primary is-fullwidth mt-1">Ajouter</button>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
